#### Common Setup

set REPO_ROOT [exec git rev-parse --show-toplevel]
cd ${REPO_ROOT}

source examples/cross-language-end-to-end-tests/common.exp

#### Test Setup

set timeout 10

spawn target/ff/cc/build/examples/cxx/cross_language_communication_complex_types/example_cxx_cross_language_communication_complex_types_publisher
set id_publisher $spawn_id

spawn cargo run --example cross_language_communication_complex_types_subscriber

#### Test Assertion

expect_output_from $id_publisher "Send sample*"
expect_output "received: 2.4246"

show_test_passed
